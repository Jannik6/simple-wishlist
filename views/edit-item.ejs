<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Item</title>
    <link rel="icon" type="image/x-icon" href="/images/<%= listType %>">
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <style>
        .edit-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .preview-img {
            max-width: 300px;
            max-height: 300px;
            margin: 20px 0;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        .button-group a, .button-group button {
            flex: 1;
            padding: 10px;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            border: none;
        }
        .back-btn {
            background-color: #6c757d;
            color: white;
        }
        .back-btn:hover {
            background-color: #5a6268;
        }
    </style>
</head>
<body>
    <div class="container edit-container">
        <h1>Edit Item</h1>
        <form action="/<%= username %>/admin/update-item/<%= item._id %>" method="POST" id="editItemForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= item.name %>" required>
            
            <label for="price">Preis:</label>
            <input type="number" id="price" name="price" step="0.01" min="0" value="<%= item.price %>" required>
            
            <label for="url">URL:</label>
            <input type="url" id="url" name="url" value="<%= item.url %>" required>
            
            <label for="imageUrl">Bild URL:</label>
            <input type="url" id="imageUrl" name="imageUrl" value="<%= item.imageUrl %>" required>
            <img id="imagePreview" src="<%= item.imageUrl %>" alt="<%= item.name %>" class="preview-img">
            
            <label for="priority">Priorität:</label>
            <input type="number" id="priority" name="priority" min="0" max="10" value="<%= item.priority %>" required>
            
            <div class="button-group">
                <button type="submit">Änderungen speichern</button>
                <a href="/<%= username %>/admin" class="back-btn">Abbrechen</a>
            </div>
        </form>
    </div>

    <script>
        // Update image preview when URL changes
        document.getElementById('imageUrl').addEventListener('change', function() {
            const preview = document.getElementById('imagePreview');
            if (this.value) {
                preview.src = this.value;
            }
        });

        document.getElementById('editItemForm').addEventListener('submit', function(event) {
            const urlInput = document.getElementById('url');
            const imageUrlInput = document.getElementById('imageUrl');
            
            if (!isValidUrl(urlInput.value) || !isValidUrl(imageUrlInput.value)) {
                event.preventDefault();
                alert('Please enter valid URLs for both URL and Image URL fields.');
            }
        });

        function isValidUrl(url) {
            try {
                new URL(url);
                return true;
            } catch (error) {
                return false;
            }
        }
    </script>
</body>
</html>
