<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Wünsche bearbeiten</title>
    <link rel="icon" type="bild/x-icon" href="/bilds/<%= listType %>">
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Füge einen Wunsch zur Liste hinzu</h1>
        <form action="/<%= username %>/admin/add-item" method="POST" id="addItemForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <label for="preis">Preis:</label>
            <input type="number" id="preis" name="preis" step="0.01" min="0" required>
            <label for="url">URL:</label>
            <input type="url" id="url" name="url" required>
            <label for="bildUrl">Bild URL:</label>
            <input type="url" id="bildUrl" name="bildUrl" required>
            <label for="priorität">Priorität:</label>
            <input type="number" id="priorität" name="priorität" min="0" max="10" value="0" required>
            <button type="submit">Wunsch hinzufügen</button>
        </form>

        <h2>Deine Wünsche</h2>
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Preis</th>
                        <th>Priorität</th>
                        <th>URL</th>
                        <th>Bild</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= currencySymbol %><%= item.preis %></td>
                        <td><%= item.priorität %></td>
                        <td><a href="<%= item.url %>" target="_blank">View</a></td>
                        <td><div class="img-container"><img src="<%= item.bildUrl %>" alt="<%= item.name %>"></div></td>
                        <td>
                            <div class="action-buttons">
                                <a href="/<%= username %>/admin/edit-item/<%= item._id %>" class="edit-btn"><i class="fas fa-edit"></i></a>
                                <form action="/<%= username %>/admin/delete-item/<%= item._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline;">
                                    <button type="submit" class="delete-btn"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.getElementById('addItemForm').addEventListener('submit', function(event) {
            const urlInput = document.getElementById('url');
            const bildUrlInput = document.getElementById('bildUrl');
            
            if (!isValidUrl(urlInput.value) || !isValidUrl(bildUrlInput.value)) {
                event.preventDefault();
                alert('Please enter valid URLs for both URL and bild URL fields.');
            }
        });

        function isValidUrl(url) {
            try {
                new URL(url);
                return true;
            } catch (error) {
                return false;
            }
        }
    </script>
</body>
</html>