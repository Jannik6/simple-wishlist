<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/images/<%= listType %>">
    <title><%= listName %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="title">
                <h1><%= listName %></h1>
            </div>
        </div>
        <div class="table-responsive">
            <table>
                <tbody>
                    <thead>
                        <tr>
                            <th>Bild</th>
                            <th>Name</th>
                            <th>Preis</th>
                            <th>Priorit채t</th>
                            <th></th>
                        </tr>
                    </thead>
                    <% wishlistItems.forEach(item => { %>
                    <tr class="clickable-row" data-url="<%= item.url %>">
                        <td data-label="Bild"><div class="img-container"><img src="<%= item.imageUrl %>" alt="<%= item.name %>"></div></td>
                        <td data-label="Name"><%= item.name %></td>
                        <td data-label="Preis"><%= item.price %> <%= currencySymbol %></td>
                        <td data-label="Priorit채t"><%= item.priority %></td>
                        <td data-label="Gekauft">
                            <form action="/<%= username %>/purchase/<%= item._id %>" method="POST">
                                <button type="submit">Gekauft</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <h1>Bereits gekauft</h1>
        <div class="table-responsive">
            <table class="purchased-table">
                <tbody>
                    <% purchasedItems.forEach(item => { %>
                    <tr>
                        <td data-label="Bild"><div class="img-container"><img src="<%= item.imageUrl %>" alt="<%= item.name %>"></div></td>
                        <td data-label="Name"><%= item.name %></td>
                        <td data-label="Preis"><%= item.price %> <%= currencySymbol %></td>
                        <td data-label="URL"><a href="<%= item.url %>">View</a></td>
                        <td data-label="Gekauft">
                            <form action="/<%= username %>/restore/<%= item._id %>" method="POST">
                                <button type="submit" style="background-color: lightcoral;">R체ckg채ngig machen</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Make table rows clickable
        document.querySelectorAll('tr.clickable-row').forEach(row => {
            row.addEventListener('click', function(e) {
                // Prevent navigation if clicking on button or form
                if (e.target.closest('button') || e.target.closest('form')) {
                    return;
                }
                const url = this.getAttribute('data-url');
                if (url) {
                    window.open(url, '_blank');
                }
            });
        });

        // Add cursor pointer style on hover
        document.querySelectorAll('tr.clickable-row').forEach(row => {
            row.addEventListener('mouseenter', function() {
                if (!this.querySelector('button:hover')) {
                    this.style.cursor = 'pointer';
                }
            });
        });
    </script>
</body>
</html>